@model OfferViewModel
@{
    ViewData["Title"] = "Offer Detail";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="row no-gutters">
            <div class="col-md-6 overflow-hidden">
                <img src="@Model.ImageUrl" alt="@Model.Breed" class="img-fluid object-cover w-100 h-100">
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-center p-4">
                <h2 class="text-primary">@Model.Title</h2>
                <p class="text-secondary mb-1">Breed: @Model.Breed</p>
                <p class="text-info mb-1">Price: @Model.Price $A</p>
                <p class="mb-3">@Model.Description</p>
                <p class="mb-3 text-muted">Location: @Model.Location</p>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#contactSellerModal">Contact Seller</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="contactSellerModal" tabindex="-1" role="dialog" aria-labelledby="contactSellerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contactSellerModalLabel">Contact Seller</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Email: <a href="mailto:@Model.SellerEmail">@Model.SellerEmail</a></p>
                <p>Phone: <a href="tel:@Model.SellerPhone">@Model.SellerPhone</a></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 960px;
        margin: auto;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    img.object-cover {
        height: 100%;
        object-fit: cover;
    }

    h2, p {
        margin: 0 0 10px;
    }

    .text-primary {
        color: #007bff;
    }

    .text-secondary {
        color: #6c757d;
    }

    .text-info {
        color: #17a2b8;
    }

    button.btn-primary {
        border: none;
        padding: 10px 20px;
        transition: background-color 0.3s;
        box-shadow: 0 2px 4px rgba(0, 123, 255, 0.5);
    }

        button.btn-primary:hover {
            background-color: #0056b3;
        }

    .mb-1, .mb-3 {
        margin-bottom: 0.25rem;
    }
</style>
