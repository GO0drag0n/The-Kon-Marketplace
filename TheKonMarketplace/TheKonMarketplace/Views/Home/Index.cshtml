@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Kon Marketplace</title>
    <style>
        body {
            font-family: 'Arial', sans-serif; /* Provides a clean, readable font */
            margin: 0;
            padding: 0;
            color: #333; /* Dark grey color for good readability */
        }

        .site-header {
            text-align: center;
            padding: 20px 0;
            background-color: #f4f4f4; /* Light grey background for the header */
            margin-bottom: 20px; /* Separation from the hero image */
        }

        .site-header h1 {
            font-size: 36px; /* Large font size for visibility */
            color: #204a87; /* Blue, matches your branding */
        }

        .hero-image img {
            width: 100%;
            height: auto;
            display: block; /* Removes any extra space around the image */
        }

        .site-footer {
            text-align: center;
            padding: 10px 0;
            background-color: #f4f4f4; /* Consistent with the header */
            position: fixed;
            width: 100%;
            bottom: 0; /* Keeps the footer at the bottom of the view */
        }

    </style>
</head>
<body>
    <header class="site-header">
        <h1>The Kon Marketplace</h1>
    </header>
    <div class="hero-image">
        <img src="~/horsecover.jpg" alt="Featured Horse">
    </div>
    <footer class="site-footer">
        © 2024 The Kon Marketplace. All rights reserved.
    </footer>
</body>
</html>

